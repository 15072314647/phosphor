body {
  margin: 0;
  padding: 0;
}


#main {
  padding: 10px;
}


.p-TabBarComponent {
  position: relative;
}


.p-TabBarComponent-header {
  display: none;
}


.p-TabBarComponent-inner {
  z-index: 1;
}


.p-TabBarComponent-footer {
  z-index: 0;
  height: 1px;
  background: #C0C0C0;
}


.p-TabBarComponent-tab {
  min-width: 50px;
  padding: 4px;
  font: 12px Helvetica, Arial, sans-serif;
  background: #E5E5E5;
  border: 1px solid #C0C0C0;
  border-bottom: none;
  &.p-mod-selected {
    background: white;
  }
  &:hover:not(.p-mod-selected) {
    background: #F0F0F0;
  }
  &:not(:first-child) {
    margin-left: -1px;
  }
}



