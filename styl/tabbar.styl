.p-TabBarComponent {
  position: relative;
  margin: 0;
  padding: 0;
  z-index: 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  list-style-type: none;
  user-select: none;
  cursor: default;
}


.p-TabBarComponent-tab {
  display: flex;
  flex-direction: row;
  flex-basis: 125px;
  overflow: hidden;
  box-sizing: border-box;
  &:not(.p-mod-active) {
    transition: left 150ms ease;
  }
}


.p-TabBarComponent-tab-icon
.p-TabBarComponent-tab-close-icon {
  flex: 0 0 auto;
}


.p-TabBarComponent-tab-text {
  flex: 1 1 auto;
  overflow: hidden;
  white-space: nowrap;
}
